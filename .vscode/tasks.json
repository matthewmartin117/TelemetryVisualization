{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang++", // Change clang to clang++
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I/opt/homebrew/Cellar/sfml/2.6.1/include", // Include path for SFML
        "-L/opt/homebrew/Cellar/sfml/2.6.1/lib", // Library path for SFML
        "-lsfml-graphics", // Link SFML graphics
        "-lsfml-window",   // Link SFML window
        "-lsfml-system"    // Link SFML system
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
